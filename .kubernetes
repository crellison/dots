### KUBERNETES HELP

### ALIASES

alias kube="kubectl"
alias kctx=kubectx
alias kls="kube get"
alias krm="kube delete"
alias kcat="kube describe"
alias kcd="kube use"
alias klog="kube logs"

# copy name of resource

kcp() {
  local pod=$(kls "$1" | grep -m 1 "$2" | sed 's/ .*//g')
  echo $pod | pbcopy 
  echo "$pod"
}

# copy endpoints of a service

kip() {
  kcat svc "$1" | grep Endpoints | sed 's/^[^0-9]*//g' | pbcopy
}

# kubernetes - execute bash shell in pod

kbash() {
  kube exec -it "$@" -- /bin/bash
}

# set namespace in current context

ksetns() {
  kube config set-context --current --namespace=$1
}
