# ALIASES

# PROFILE RELOAD
alias sbp="source ~/.bash_profile"
alias szp="source ~/.zshrc"

# better cat
alias cat="bat"
export BAT_THEME="GitHub"

# make zip recursive
alias zip="zip -r"

# copy current git branch
alias cpbranch="git rev-parse --abbrev-ref HEAD | tr -d '[:space:]' | pbcopy"

# fast grep
alias fgrep="find . -type f | parallel -k -j150% -n 1000 -m grep -H -n"

### Stolen from Paul Irish dotfiles

# GIT STUFF

function clone() {
    git clone $1
    cd $(basename ${1%.*})
}

# interactive rebase. use trunk branch for all commits on current branch
alias gr="git rebase -i"

# make a fixup commit for auto-squashing
alias gf="git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --no-verify --fixup"

# git checkout master
alias master="git checkout master && git reset --hard origin/master && git pull origin master"

# pretty history graph
alias git_graph="git log --graph --decorate --oneline"

# delete branches merged to master
alias git_cleanup="master && git branch --merged master | grep -v '^[ *]*master$' | xargs git branch -d"

# Networking. IP address, dig, DNS
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
# alias dig="dig +nocmd any +multiline +noall +answer"
# wget sucks with certificates. Let's keep it simple.
alias wget="curl -O"

# Recursively delete `.DS_Store` files
alias cleanup_dsstore="find . -name '*.DS_Store' -type f -ls -delete"

alias diskspace_report="df -P -kHl"

# File size
alias fs="stat -f \"%z bytes\""

# Update installed Ruby gems, Homebrew, npm, and their installed packages
alias brew_update="brew -v update; brew cleanup --prune-prefix; brew doctor"
